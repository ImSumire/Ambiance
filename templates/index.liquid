<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/main.min.css') }}">
    <title>Spotifi</title>
</head>
<body>
    <h1>Spotifi</h1>
    <h2>Genres</h2>
    <ul>
        {% for genre in genres %}
            <li>{{ genre.name }}</li>
        {% endfor %}
    </ul>
    <h2>Albums</h2>
    <ul>
        {% for album in albums %}
            <li>{{ album.title }} by {{ album.artist.name }}</li>
        {% endfor %}
    </ul>
    <h2>Artists</h2>
    <ul>
        {% for artist in artists %}
            <li>{{ artist.name }}</li>
        {% endfor %}
    </ul>
    <h2>Songs</h2>
    <ul>
        {% for song in songs %}
            <li>{{ song.title }} by {{ song.artist.name }}</li>
        {% endfor %}
    </ul>

    <br>

    <h2>Admin</h2>

    <h3>Add New Genre</h3>
    <form action="/add_genre" method="POST">
        <input type="text" name="name" placeholder="Genre Name" required>
        <button type="submit">Add Genre</button>
    </form>
    
    <h3>Add New Album</h3>
    <form action="/add_album" method="POST">
        <input type="text" name="title" placeholder="Album Title" required>
        <select name="artist_id" required>
            <option value="">Select Artist</option>
            {% for artist in artists %}
                <option value="{{ artist.id }}">{{ artist.name }}</option>
            {% endfor %}
        </select>
        <button type="submit">Add Album</button>
    </form>
    
    <h3>Add New Artist</h3>
    <form action="/add_artist" method="POST">
        <input type="text" name="name" placeholder="Artist Name" required>
        <button type="submit">Add Artist</button>
    </form>
    
    <h3>Add New Song</h3>
    <form action="/add_song" method="POST">
        <input type="text" name="title" placeholder="Song Title" required>
        <input type="number" name="length" placeholder="Song Length (in seconds)" required>
        <input type="date" name="creation" placeholder="Song Creation Date" required>
        <select name="genre_id" required>
            <option value="">Select Genre</option>
            {% for genre in genres %}
                <option value="{{ genre.id }}">{{ genre.name }}</option>
            {% endfor %}
        </select>
        <select name="album_id" required>
            <option value="">Select Album</option>
            {% for album in albums %}
                <option value="{{ album.id }}">{{ album.title }} (by {{ album.artist.name }})</option>
            {% endfor %}
        </select>
        <button type="submit">Add Song</button>
    </form>
</body>
</html>
