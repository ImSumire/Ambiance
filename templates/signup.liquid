{% extends "layout/base.liquid" %}

{% block title %} Sign Up {% endblock %}

{% block content %}
    <h2>Sign Up</h2>

    <form action="/register" method="POST">
        <!-- Name -->
        <label for="name">Name:</label><br><br>
        <input type="text" id="name" name="name" required><br><br>

        <!-- Last Name -->
        <label for="last-name">Last Name:</label><br><br>
        <input type="text" id="last-name" name="last-name" required><br><br>

        <!-- Birth -->
        <label for="birth">Birth:</label><br><br>
        <input type="date" id="birth" name="birth" required><br><br>

        <!-- Contract (very safe and secure) -->
        <label for="contract">Contract:</label><br><br>
        <select name="contract" required>
            {% for contract in contracts %}
                <option value="{{ contract.id }}">{{ contract.id }} (capacity: {{ contract.capacity }})</option>
            {% endfor %}
        </select><br><br>

        <button type="submit">Sign Up</button>
    </form>
    <br>
    <a href="/signin">Sign In instead</a>
{% endblock %}
